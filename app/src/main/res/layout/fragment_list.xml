<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testfragmentapp.presentation.screens.ListFragment">

    <TextView
        android:id="@+id/tvFragList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btFragList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="go on form frag"
        app:layout_constraintEnd_toEndOf="@+id/tvFragList"
        app:layout_constraintStart_toStartOf="@+id/tvFragList"
        app:layout_constraintTop_toBottomOf="@+id/tvFragList" />

</androidx.constraintlayout.widget.ConstraintLayout>